<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="25dp"
    app:cardElevation="15dp"
    tools:context=".Admin.AdminMaintainProducts">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/productimageIV_maintain"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/productnametv"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />
        <EditText
            android:id="@+id/productnamentv_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/productimageIV_maintain"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/productpricetv_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Price"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/productnamentv_maintain"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/productdescriptiontv_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Description"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/productpricetv_maintain"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/apply_changes_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Changes"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:layout_below="@+id/productdescriptiontv_maintain"
            android:layout_marginTop="5dp"
            android:textSize="18dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/delete_prod_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete This Product"
            android:layout_margin="32dp"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp"
            android:textAlignment="center"
            android:layout_below="@+id/apply_changes_btn"

            android:textSize="18dp"
            android:textColor="@android:color/white"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>